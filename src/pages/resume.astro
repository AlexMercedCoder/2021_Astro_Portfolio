---
import resume from "../json/resume.json"
---

    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Resume of Alex Merced</title>
</head>
<body>

<!-- PAGE ONE -->

<div class="page"><header>
<h1>{resume.title}</h1>
<h4>alex@alexmerced.com - LinkedIn.com/in/AlexMerced - Winter Park, FL</h4>
</header>

<h3>Summary</h3>
<ul>
{resume.summary.map((s) => (
    <li>{s.action}</li>
))}
</ul>

<h3>Skills</h3>
<ul>
{Object.entries(resume.skills).map((s) => (
    <li><span class="title">{s[0]}:</span>{" "}{s[1]}</li>
))}
</ul>

<h3>Employment</h3>
<ul class="emp">
{resume.employment.slice(0,2).map((e) => (<li>
    <h4>{e.name} - {e.position}</h4>
    <h5>{e.dates}</h5>
    <p>{e.description}</p>
</li>))}
</ul>

</div>

<!-- PAGE TWO -->

<div class="page"><header>
<h1>{resume.title}</h1>
</header>

<h3>Employment</h3>
<ul class="emp">
{resume.employment.slice(2,4).map((e) => (<li>
    <h4>{e.name} - {e.position}</h4>
    <h5>{e.dates}</h5>
    <p>{e.description}</p>
</li>))}
</ul>

<h3>Education</h3>
<ul class="emp">
{resume.education.map((e) => (<li>
    <h4>{e.name} - {e.position}</h4>
    <h5>{e.dates}</h5>
    <p>{e.description}</p>
</li>))}
</ul>

</div>



    <style>
    @import url('https://fonts.googleapis.com/css2?family=Plaster&family=Press+Start+2P&family=Righteous&family=Roboto:wght@100&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300&display=swap');

    .page {
        border: 2px solid black;
        height: 1100px;
        width: 850px;
        font-family: 'Roboto', sans-serif;
        page-break-after: always;
    }

    header {
        text-align: center;
        background-color: gold;
        padding: 10px
    }

    h3, ul {
        width:90%;
        margin: 20px auto;
    }

    .emp {
        list-style: none;
    }

    .emp h4 {
        text-decoration: underline;
    }

    ul {
        font-family: 'Fira Sans', sans-serif;
        line-height: 1.5em;
    }

    .title {
        font-weight:900
    }
    </style>
</body>
</html>